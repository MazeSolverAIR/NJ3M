<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/ic_pronadimbot"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="570px"
        android:layout_height="1313px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="@drawable/ic_pozadinatipki" />

    <ImageView
        android:layout_width="366px"
        android:layout_height="62px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="86dp"
        android:background="@drawable/ic_pozadina_odaberi_vezu" />

    <ImageView
        android:layout_width="232px"
        android:layout_height="28px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="92dp"
        android:background="@drawable/ic_odaberi_vezu_tekst" />

    <ImageButton
        android:id="@+id/btnBluetooth"
        android:layout_width="340px"
        android:layout_height="340px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:background="@drawable/ic_bluetoothikona"></ImageButton>


    <ImageButton
        android:id="@+id/btnWifi"
        android:layout_width="340px"
        android:layout_height="340px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="303dp"
        android:background="@drawable/ic_wifiikona"></ImageButton>



</RelativeLayout>