<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/ic_pozadinaradnizaslon"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btnListen"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_below="@+id/imgPracenjeRobota"
        android:layout_alignBaseline="@+id/btnStartConnection"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="30dp"
        android:text="Listen" />

    <Button
        android:id="@+id/btnStartConnection"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_below="@+id/imgPracenjeRobota"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="-75dp"
        android:layout_marginBottom="30dp"
        android:text="Poveži" />

    <Button
        android:id="@+id/btnSendControl"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_below="@+id/imgPracenjeRobota"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="-75dp"
        android:layout_marginBottom="30dp"
        android:text="Šalji" />

    <ImageView
        android:id="@+id/imgPracenjeRobota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="163dp"
        app:srcCompat="@drawable/ic_pracenjerobota" />

    <Switch
        android:id="@+id/swStartStop"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/imgPracenjeRobota"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-140dp"
        android:layout_marginBottom="118dp"
        android:text="ON / OFF" />
</RelativeLayout>